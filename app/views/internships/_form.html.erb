<%= simple_form_for @internship, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :company %>
  <%= f.input :internship_type %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                internships_path, :class => 'btn' %>
  </div>
<% end %>
